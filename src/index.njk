{% extends "layouts/base.njk" %}

{# --- МЕТАДАННЫЕ ЭТОЙ СТРАНИЦЫ (для <title> и <meta>) --- #}
{% set title = settings.lead_magnet_page.title %}
{% set description = settings.lead_magnet_page.subheadline %}
{% set permalink = "/" %} {# Делаем эту страницу главной #}

{# --- УНИКАЛЬНЫЕ СТИЛИ ЭТОЙ СТРАНИЦЫ --- #}
{% block pageStyles %}
<style>
   /* src/index.njk -> внутри блока {% block pageStyles %} */

/* Специфичные переменные, если они отличаются */
:root {
    --primary-color-lm: #8e44ad; 
    --secondary-color-lm: #3498db;
}

/* Уникальный стиль для списка преимуществ на главной */
.benefits-list-lm {
    list-style: none;
    padding: 30px;
    margin: 40px auto;
    max-width: 600px;
    text-align: left;

    /* ✅ Эффект "матового стекла" перенесен сюда */
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.benefits-list-lm li {
    font-size: 1.15rem;
    margin-bottom: 20px;
    display: flex;
    align-items: flex-start;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.6;
}

.benefits-list-lm li .bullet-icon-lm {
    font-size: 1.4em;
    margin-right: 15px;
    color: var(--accent-color-lm);
    line-height: 1.5;
}

.benefits-list-lm li .bullet-text-lm strong {
    font-weight: 700;
    color: var(--text-color-lm);
}

.cta-details-lm {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.85);
    margin-top: 20px;
}

/* Адаптивность */
@media (max-width: 700px) {
    .main-title { font-size: 2.2em; }
    .subtitle { font-size: 1.15em; }
    .benefits-list-lm li { font-size: 1.05rem; }
    .cta-button { font-size: 1.1rem; padding: 16px 35px; }
}
</style>
{% endblock %}

{# --- УНИКАЛЬНЫЙ КОНТЕНТ ЭТОЙ СТРАНИЦЫ --- #}
{% block mainContent %}
<div class="page-container">
    <div class="content-wrapper">
        <h1 class="main-title">
            {{- settings.lead_magnet_page.headline | safe -}}
        </h1>

        <p class="subtitle">
            {{- settings.lead_magnet_page.subheadline | safe -}}
        </p>

        <ul class="benefits-list-lm">
            {%- for benefit in settings.lead_magnet_page.benefits -%}
            <li>
                <span class="bullet-icon-lm">{{ benefit.icon }}</span>
                <span class="bullet-text-lm">{{ benefit.text | safe }}</span>
            </li>
            {%- endfor -%}
        </ul>

        <a href="{{ settings.integrations.links.lead_magnet_bot }}" class="cta-button">
            {{- settings.lead_magnet_page.cta_button_text -}}
        </a>
        <p class="cta-details-lm">
            (Нажми и получи мгновенный доступ в нашем Telegram-боте!)
        </p>
    </div>
    
    <script src="/js/footer-script.js" defer></script>
</div>
{% endblock %}
