{% extends "layouts/base.njk" %}

{# --- МЕТАДАННЫЕ ЭТОЙ СТРАНИЦЫ (для <title> и <meta>) --- #}
{% set title = settings.lead_magnet_page.title %}
{% set description = settings.lead_magnet_page.subheadline %}
{% set permalink = "/" %} {# Делаем эту страницу главной #}

{# --- УНИКАЛЬНЫЕ СТИЛИ ЭТОЙ СТРАНИЦЫ --- #}
{% block pageStyles %}
<link rel="stylesheet" href="/css/lead-magnet.css">
{% endblock %}

{# --- УНИКАЛЬНЫЙ КОНТЕНТ ЭТОЙ СТРАНИЦЫ --- #}
{% block mainContent %}
<div class="page-container">
    <div class="content-wrapper">
        <h1 class="main-title">
            {{- settings.lead_magnet_page.headline | safe -}}
        </h1>

        <p class="subtitle">
            {{- settings.lead_magnet_page.subheadline | safe -}}
        </p>

        <ul class="benefits-list-lm"> {# ✅ Имя класса возвращено #}
            {%- for benefit in settings.lead_magnet_page.benefits -%}
            <li>
                <span class="bullet-icon-lm">{{ benefit.icon }}</span> {# ✅ Имя класса возвращено #}
                <span class="bullet-text-lm">{{ benefit.text | safe }}</span> {# ✅ Имя класса возвращено #}
            </li>
            {%- endfor -%}
        </ul>

        <a href="{{ settings.integrations.links.lead_magnet_bot }}" class="cta-button cta-button--shaking">
            {{- settings.lead_magnet_page.cta_button_text -}}
        </a>
        <p class="cta-details-lm"> {# ✅ Имя класса возвращено #}
            (Нажми и получи мгновенный доступ в нашем Telegram-боте!)
        </p>
    </div>
    
    <script src="/js/footer-script.js" defer></script>
</div>
{% endblock %}
